{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "composite": true,
    "paths": {
      "@kousta-ui/styles/*": ["../styles"]
    },
    "esModuleInterop": true,
    "types": ["@testing-library/jest-dom"],
    "lib": ["es2021", "dom"]
  },
  "include": ["packages/**/*", "jest.setup.js"],
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
