{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["packages/components/src/*"],
      "@hooks/*": ["packages/hooks/src/*"],
      "@helpers/*": ["packages/helpers/src/*"]
    },
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*"]
}
