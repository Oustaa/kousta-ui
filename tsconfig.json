{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@kousta-ui/styles/*": ["../styles"]
    },
    "esModuleInterop": true
  },
  "include": ["packages/**/*"],
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "references": [
    { "path": "packages/components" },
    { "path": "packages/hooks" },
    { "path": "packages/helpers" }
  ]
}
