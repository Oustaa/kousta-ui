{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "message": "chore(release): publish"
    },
    "publish": {
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "createRelease": "github"
    }
  }
}
